# CamperShare Environment Variables
# Copy this file to .env.local and fill in your values

# Application URLs
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here
NEXT_PUBLIC_SITE_URL=https://example.com

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/campershare
REDIS_URL=redis://localhost:6379

# Email Service Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Alternative Email Services:
# For SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# For Mailgun:
# SMTP_HOST=smtp.eu.mailgun.org
# SMTP_PORT=587
# SMTP_USER=your-mailgun-user
# SMTP_PASSWORD=your-mailgun-password

# Payment Configuration
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google Maps API (for route planning)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Optional: Email verification settings
EMAIL_VERIFICATION_TIMEOUT=24h
PASSWORD_RESET_TIMEOUT=1h

# Development flags
NODE_ENV=development
DEBUG_EMAILS=true
